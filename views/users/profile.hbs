<a class="arrow" href="/"><i class="fa fa-arrow-left" aria-hidden="true"></i></a> 
<div class="container">
    <div class="row profile">
        <div class="d-flex flex-column justify-content-center align-items-center register-box">
            <form action="/profile" method="POST" enctype="multipart/form-data">
                <div class="profilepicture">
                    <div class="avatarWrapper">
                        <div class="avatar cursor-pointer">
                            <div class="uploadOverlay"><span id="btn-foto" class="fa fa-cloud-upload"
                                    onclick="document.getElementById('file').click()"></span>
                                <input type="file" onchange="readURL(this, 'user-photo')" id="file" name="image" hidden>
                                {{#if currentUser.image}}
                                <img id="user-photo" src="{{currentUser.image}}">
                                {{else}}
                                <img id="user-photo"
                                    src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/20625/avatar-bg.png">
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email" class="form-control-label">EMAIL</label>
                    <h4 class="emailprofile">{{currentUser.email}}</h4>
                </div>
                <div class="form-group">
                    <label class="form-control-label">USERNAME</label>
                    <input value="{{currentUser.username}}" type="text" name="username" class="form-control"
                        placeholder="Username">
                </div>
                <!-- <div class="form-group">
                                <label for="birthday" class="form-control-label">Birthday</label>
                                <input  value="{{currentUser.birthday}}" type="date" id="birthday" minlength="2" maxlength="15" name="birthday"
                                    class="form-control">
                            </div> -->
                <div class="register-btm register-button">
                    <button type="submit" class="btn btn-primary">Save!</button>
                </div>
            </form>
        </div>
    </div>
</div>