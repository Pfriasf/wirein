<div class="container">
  <div class="row login">
    <div class="d-flex flex-column justify-content-center align-items-center register-box">
      <div class="col-10">
        <div class="col-lg-12">
          <form action="/login" method="POST">
            <div class="form-group">
              <label class="form-control-label">User Credential</label>
              <input type="email" name="email" value="{{userCredential}}" class="form-control" id="email"
                placeholder="example@example.com &#x1F4E7;" required>
            </div>
            <div class="form-group">
                  <label class="form-control-label">PASSWORD</label>
               <div class="input-group" id="show_hide_password">
                    <input type="password" name="password" value ="{{passwordCredential}}" class="form-control"
                     placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;&#9679; &#x1F512" id="password" required>
                   <div class="input-group-addon">
                      <a href=""><i class="fa fa-eye-slash" aria-hidden="true"></i></a>
                   </div>
              </div>

             <div class="col-lg-12 loginbttm">              
              <div class="register-btm register-button">
                <a  href="/services/my-contracted-services" type="submit" class="btn btn-primary">Close</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>