<div class="container">
    <div class="row login">
        <div class="d-flex flex-column justify-content-center align-items-center contact-box">
            <div class="col-10">
                <div class="col-lg-12">
                    <form id="mailForm" action="/email" method="POST">
                        <div class="form-group">
                            <label for="fname" class="form-control-label fullName">FULL NAME</label>
                            <input type="text" name="fname" value="{{user.email}}" class="form-control" id="fname"
                                placeholder="&#x1F609;" required>
                        </div>
                        <div class="form-group">
                            <label for="email" class="form-control-label">EMAIL</label>
                            <input type="email" name="email" class="form-control"
                                placeholder="example@example.com &#x1F4E7;"
                                id="email" required>
                        </div>
                        <div class="form-group">
                            <label for="message" class="form-control-label">MESSAGE</label>
                            <textarea class="form-control" id="message" name="message" rows="3"
                                placeholder="&#x1F4E9;"></textarea>
                        </div>
                        <div class="col-lg-12 loginbttm">
                            <div class="register-btm register-button">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
